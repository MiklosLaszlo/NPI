<vxml version = "2.1" xml:lang="en-US" >
	<form id="asignatura">
		<script src="script/horarios_EN.js"/>
		<script src="script/script_horario.js"/>

		<field name="inicio">
			<prompt bargein="false">Welcome to the university of granada scheduling system  ,Which subject would you like to known? </prompt>
			<prompt bargein="false" count="2"> Tell me the subject again </prompt> 
			<prompt bargein="false" count="3"> please repeat the subject </prompt> 
			
			<nomatch> The subject you said is not in our system <reprompt/></nomatch>
			<noinput> Sorry, i did not understand you <reprompt/> </noinput>

			<grammar src="gram/subjects.jsgf"/>
		</field>
		<filled>
			<if cond="inicio$.confidence &lt; 0.6">
				<prompt bargein="false"> Sorry, I did not undertand the subject tu said</prompt>
				<clear namelist="inicio"/>
			<else/>
				<prompt bargein="false">
					The subject <value expr="inicio"/> is on <value expr="busca_horario(inicio).dias"/>, <value expr="busca_horario(inicio).horas"/>
				</prompt>
			</if>
		</filled>
	</form>
</vxml>