<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/Horarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="Sistema Horarios"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textDirection="inherit"
                    android:textIsSelectable="false"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:verticalScrollbarPosition="defaultPosition"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/Textoplano"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Grado"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/mic"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9F8FA"
                    android:baselineAligned="false"
                    android:paddingRight="1dp"
                    android:src="@drawable/ic_mic_black_off" />

                <EditText
                    android:id="@+id/textmic"
                    android:layout_width="224dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint='Escriba o micro para hablar'
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button_mic"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:text="leer"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textoplano2"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Nombre de la asignatura"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/mic2"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9F8FA"
                    android:baselineAligned="false"
                    android:paddingRight="1dp"
                    android:src="@drawable/ic_mic_black_off" />

                <EditText
                    android:id="@+id/textmic2"
                    android:layout_width="224dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Escriba o micro para hablar"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button_mic2"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:text="leer"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textoplano3"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Seleccionar subgrupo"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/mic3"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9F8FA"
                    android:baselineAligned="false"
                    android:paddingRight="1dp"
                    android:src="@drawable/ic_mic_black_off" />

                <EditText
                    android:id="@+id/textmic3"
                    android:layout_width="224dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint='Escriba o micro para hablar'
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/button_mic3"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:text="leer"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultLayout"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Calcular horario"/>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textosalida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Rellene el resto de campos"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="16sp"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>